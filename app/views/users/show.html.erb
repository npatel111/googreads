Hi <%=@user.name%><br><br>
List of your shelves:<br><br>
<%@user.shelves.each do |shelf| %>
  <strong>Shelf name: <%=shelf.name%></strong><br>
  <%shelf.books.each do |book|%>
    <%=book.title%> by <%=book.author.name%><Br>
    <%book.genres.each do |genre|%>
       Genre:<%=genre.name%><br>
    <%end%>
    <%if book.reviews.length > 0%>
      Reviews:<br>
      <%book.reviews.each do |review| %>
        Rating: <%=review.rating%><br>
        Content: <%=review.content%><br>
      <%end%><br>
    <%end%><br>
  <%end%>
  <br>
<%end%>

<%= form_tag logout_path do %>
<%= submit_tag "Logout" %>
<% end %>

<%= link_to "Edit Account", edit_user_path %>

<%= form_tag user_path(@user), method: "delete" do%>
  <%= submit_tag "Delete account" %>
<% end %>
