<div class="form-container">
Login:
<br>
<br>
<%= form_for @user, url: login_path, method: :post do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <br>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= f.submit "log in" %>
<% end %>
<br>
</div>
